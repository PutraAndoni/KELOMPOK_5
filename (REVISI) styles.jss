body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

#upload-container {
    text-align: center;
    margin: 20px;
}

#image-upload, #split-count {
    margin: 10px;
}

#output-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 20px;
}

.output-image {
    margin: 10px;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
}

button {
    margin-top: 10px;
    padding: 8px 16px;
    font-size: 14px;
    cursor: pointer;
}
